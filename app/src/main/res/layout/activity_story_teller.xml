<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#996BF178"
    tools:context=".StoryTeller">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/grobold"
        android:text="KIDS STORIES"
        android:textAlignment="center"
        android:padding="6dp"
        android:textSize="32dp"
        android:background="@color/secondary"
        android:textColor="@color/tertiary"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/candybeans"
        android:text="Collections of children's fairy tales in English."
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storyRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        android:paddingTop="16dp"
        android:paddingBottom="64dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>